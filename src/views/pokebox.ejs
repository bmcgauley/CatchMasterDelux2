<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokébox</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <header>
        <h1>Pokébox</h1>
        <div id="game-info"></div>
    </header>
    <main>
        <div id="box-navigation">
            <button id="prev-box">&lt; Previous Box</button>
            <span id="current-box">Box 1</span>
            <button id="next-box">Next Box &gt;</button>
        </div>
        <div id="pc-box" class="pokebox-grid"></div>
        <div id="pokemon-details"></div>
        <div id="stats">
            <p>Pokémon Caught: <span id="caught-count">0</span> / <span id="total-count">0</span></p>
            <p>Completion: <span id="completion-percentage">0%</span></p>
        </div>
    </main>
    <script type="module" src="/js/auth.js"></script>
    <script type="module" src="/js/pokedexService.js"></script>
    <script type="module" src="/js/firestore.js"></script>
    <script type="module" src="/js/pokebox.js"></script>
</body>
</html>
